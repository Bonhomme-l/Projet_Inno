<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.inscrire.InscrireActivity2">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/rectangle_violet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paw_orange" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/marqueur_orange" />

    <TextView
        android:id="@+id/textView11"
        style="@style/App_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:text="Pet\nUp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="309dp"
        android:layout_height="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/ligne" />

    <TextView
        android:id="@+id/textView8"
        style="@style/Login_Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="108dp"
        android:text="Inscription"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/inscrire_inscrire"
        style="@style/Login"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bouton_fond_violet"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView25"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/textView27"
        style="@style/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="S'inscrire"
        app:layout_constraintBottom_toBottomOf="@+id/inscrire_inscrire"
        app:layout_constraintEnd_toEndOf="@+id/inscrire_inscrire"
        app:layout_constraintStart_toStartOf="@+id/inscrire_inscrire"
        app:layout_constraintTop_toTopOf="@+id/inscrire_inscrire" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/textView25"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="@+id/textView25">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Je souhaite :"
            android:textAppearance="@style/Login" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/eleveur_radio_incrire"
                style="@style/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="Faire adopter" />

            <RadioButton
                android:id="@+id/adopter_radio_inscrire"
                style="@style/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="Adopter" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            style="@style/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText

            android:id="@+id/email_inscrire"
            style="@style/Login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_height"
            android:background="@drawable/login_edittext"
            android:ems="10"
            android:paddingStart="12dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            style="@style/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe" />

        <EditText

            android:id="@+id/mdp_inscrire"
            style="@style/Login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_height"
            android:background="@drawable/login_edittext"
            android:ems="10"
            android:paddingStart="12dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView13"
            style="@style/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmez votre mot de passe " />

        <EditText

            android:id="@+id/mdp_confirme_inscrire"
            style="@style/Login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_height"
            android:background="@drawable/login_edittext"
            android:ems="10"
            android:paddingStart="12dp"
            android:inputType="textPassword" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>